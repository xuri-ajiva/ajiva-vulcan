{
  "Ajiva": {
    "Window": {
      "Width": 1600,
      "Height": 1200,
      "PosX": 200,
      "PosY": 300
    },
    "ShaderConfig": {
      "TEXTURE_SAMPLER_COUNT": 128
    },
    "AssetPath": "Assets/default.asset"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File"
    ],
    "MinimumLevel": "Debug",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "path": "Logs/Ajiva-engine.txt",
          "outputTemplate": "{Timestamp:o}|{Level:u3}|({ThreadId}/{ThreadName})|{SourceContext}|{Message}|{Exception}{NewLine}"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} [{Level:u3}#{ThreadId}] {SourceContext} ({Caller})] {Message:lj}{NewLine}{Exception}"
          //"theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      {
        "Name": "WithCaller",
        "Args": {
          "includeFileInfo": false
        }
      },
      "WithMachineName",
      "WithThreadId"
    ],
    "Destructure": [
      {
        "Name": "ToMaximumDepth",
        "Args": {
          "maximumDestructuringDepth": 4
        }
      },
      {
        "Name": "ToMaximumStringLength",
        "Args": {
          "maximumStringLength": 100
        }
      },
      {
        "Name": "ToMaximumCollectionCount",
        "Args": {
          "maximumCollectionCount": 10
        }
      }
    ]
  }
}
